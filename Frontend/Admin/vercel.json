{
  "version": 2,
  "github": {
    "enabled": true,
    "deployments": {
      "preview": {
        "enabled": false
      },
      "production": {
        "enabled": true
      }
    }
  },
  "build": {
    "env": {
      "VITE_API_BASE": "https://salescrmapp.onrender.com"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
